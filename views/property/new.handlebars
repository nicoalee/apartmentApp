<div class="listDisplay">
    <div class="container">
        <h3>Create Property:</h3>
        <hr/>
    </div>
    {{#if ErrMsg}}
        <div style="background-color: #CC0202; color: gray; border-radius: 20px; width: 40%; padding: 1%; margin: 4% auto;">
            <h4>{{ErrMsg}}</h4>
        </div>
    {{/if}}
    <div class="container" style="width: 30%;">
        <form action="/properties/create" method="POST">
            <div class="form-group">
                <label for="addressField">Address</label>
                <input class="form-control" id="addressField" placeholder="Address" name="address" required="true">
            </div>
            <div class="form-group">
                <label for="nameField">Select Neighborhood</label>
                <select class="form-control" id="nameField" name="nname">
                    {{#each neighborhoods}}
                        <option value={{this}} required="true">{{this}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="emailField">Owner Email</label>
                <input type="email" class="form-control" id="emailField" placeholder="Owner Email (Optional)" name="email">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>