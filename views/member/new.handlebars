<div class="listDisplay">
    <div class="container">
        <h3>Create Member:</h3>
        <hr/>
    </div>
        {{#if ErrMsg}}
        <div style="background-color: #CC0202; color: gray; border-radius: 20px; width: 20%; padding: 1%; margin: 4% auto;">
            <h4>{{ErrMsg}}</h4>
        </div>
        {{/if}}
    <div class="container" style="width: 30%;">
        <form action="/members/create" method="POST">
            <div class="form-group">
                <label for="emailField">Email address</label>
                <input type="email" class="form-control" id="emailField" placeholder="Email" name="email" required="true">
            </div>
            <div class="form-group">
                <label for="nameField">Name</label>
                <input class="form-control" id="nameField" placeholder="Name" name="name" required="true">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>